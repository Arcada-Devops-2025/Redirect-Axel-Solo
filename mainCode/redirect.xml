<?xml version="1.0" encoding="UTF-8"?>
<Response>
  <If condition="Digits == 1">
    <Redirect method="GET">./jokes.xml</Redirect>
  </If>
  <If condition="Digits == 2">
    <Redirect method="GET">./future.xml</Redirect>
  </If>
  <If condition="Digits == 3">
    <Redirect method="GET">./exotic.xml</Redirect>
  </If>
  <Else>
    <Say>Invalid number, try again.</Say>
    <Redirect method="GET">./menu.xml</Redirect>
  </Else>
</Response>